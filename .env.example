# AWS Configuration (Bronze/Silver storage)
# Never commit real keys. Use local credentials file or env vars in deployment.
AWS_ACCESS_KEY_ID=changeme
AWS_SECRET_ACCESS_KEY=changeme
AWS_REGION=us-east-1
S3_BUCKET_NAME=egyptian-exchange-data
S3_BRONZE_PREFIX=bronze/
S3_SILVER_PREFIX=silver/
S3_GOLD_PREFIX=gold/

# Snowflake Configuration (Gold layer)
SNOWFLAKE_ACCOUNT=changeme
SNOWFLAKE_USER=changeme
SNOWFLAKE_PASSWORD=changeme
SNOWFLAKE_ROLE=SYSADMIN
SNOWFLAKE_WAREHOUSE=COMPUTE_WH
SNOWFLAKE_DATABASE=EGX_DATA
SNOWFLAKE_BRONZE_SCHEMA=BRONZE
SNOWFLAKE_SILVER_SCHEMA=SILVER
SNOWFLAKE_GOLD_SCHEMA=GOLD

# Kafka Configuration (Streaming ingest)
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TICKS_TOPIC=egx_ticks
KAFKA_ACTIONS_TOPIC=egx_corporate_actions

# Kaggle API (Batch ingest)
KAGGLE_USERNAME=changeme
KAGGLE_KEY=changeme
KAGGLE_DATASET=changeme/dataset-name

# EGX Web Scraping
EGX_BASE_URL=https://www.egx.com.eg
EGX_SCRAPE_INTERVAL_SECONDS=30
EGX_USER_AGENT=Mozilla/5.0 (compatible; EGXDataBot/1.0)

# Airflow
AIRFLOW_HOME=/opt/airflow
AIRFLOW_UID=50000
AIRFLOW_DAG_IMPORT_PATH=airflow/dags
AIRFLOW_ENABLE_XCOM_PICKLING=True

# Project Settings
PROJECT_NAME=Egyptian-Exchange-Pipeline
ENVIRONMENT=development
LOG_LEVEL=INFO
PYTHONPATH=./