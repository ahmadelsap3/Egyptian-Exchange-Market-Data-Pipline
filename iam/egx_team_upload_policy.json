{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowListBucketPrefixes",
      "Effect": "Allow",
      "Action": ["s3:ListBucket"],
      "Resource": ["arn:aws:s3:::${BUCKET_NAME}"],
      "Condition": {"StringLike": {"s3:prefix": ["streaming/*", "batch/*"]}}
    },
    {
      "Sid": "AllowPutObjects",
      "Effect": "Allow",
      "Action": ["s3:PutObject", "s3:PutObjectAcl"],
      "Resource": [
        "arn:aws:s3:::${BUCKET_NAME}/streaming/*",
        "arn:aws:s3:::${BUCKET_NAME}/batch/*"
      ]
    }
  ]
}
